<body>
    <div class="stuff">
        <div class="login">
            <h1>Sign Up</h1>
            <div class="forms">
                <form action="/accountinfo" method="post">
                    <label for="email">Email:</label>
                    <input type="text" id="email" name="email" placeholder="Enter your email here " required><br><br>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Enter your username here" required><br><br>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password here " required><br><br>
                    <input type="submit" value="Sign Up">
                </form>
            </div> 
        </div>  
    </div>
    <div class="login-link">
        <p> Already have an account? <a href="/login">Login here</a></p>    
    </div>